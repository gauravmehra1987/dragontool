{

	"model":			"@model Combobulator.Business.ViewModels.FormViewModel",

	"open":				"@using (Ajax.BeginForm(\"NewCustomerSubmit\", \"Customer\", new AjaxOptions { HttpMethod = \"POST\", InsertionMode = InsertionMode.Replace, UpdateTargetId = \"formContainer\" }))\n{\n@Html.AntiForgeryToken()\n@Html.ValidationSummary(true)",
	"close":			"}",

	"field": {

		"user":		"@Html.HiddenFor(model => model.UserId, new {@id = \"uid\", @value = ViewBag.UserId})",

		"title":		"@Html.DropDownListFor(model => model.Title, new SelectList(Model.Titles, \"Name\", \"Name\"),  \"Title\")",
		"name":			"@Html.TextBoxFor(model => model.FirstName, new {@type = \"text\", @id=\"name\", @placeholder=\"First name\"})",
		"surname":		"@Html.TextBoxFor(model => model.LastName, new {@type = \"text\", @id=\"surname\", @placeholder=\"Last name\"})",
		"email":		"@Html.TextBoxFor(model => model.Email, new {@type = \"email\", @id=\"email\", @placeholder = \"E-mail address\"})",
		"tel":			{

			"home":		"@Html.TextBoxFor(model => model.TelephoneHome, new {@type = \"tel\", @id = \"tel-home\", @placeholder = \"Home telephone\"})",
			"work":		"@Html.TextBoxFor(model => model.TelephoneWork, new {@type = \"tel\", @id = \"tel-work\", @placeholder = \"Work telephone\"})",
			"mobile":	"@Html.TextBoxFor(model => model.TelephoneMobile, new {@type = \"tel\", @id = \"tel-mobile\", @placeholder = \"Mobile telephone\"})"

		},
		"address": {

			"home":			"@Html.TextBoxFor(model => model.AddressType, new { @type=\"radio\", @id=\"address-type-home\", @name=\"address-type\", @value=\"home\", @checked=\"checked\"})",
			"work":			"@Html.TextBoxFor(model => model.AddressType, new { @type = \"radio\", @id = \"address-type-work\", @name = \"address-type\", @value = \"home\"})",
			"postcode":		"@Html.TextBoxFor(model => model.AddressPostcode, new {type = \"text\", id = \"postcode\", placeholder = \"Postcode\"})",
			"address1":		"@Html.TextBoxFor(model => model.AddressLine1, new {@type = \"text\", @id = \"address-1\", @placeholder = \"Address line 1\", @disabled = \"disabled\"})",
			"address2":		"@Html.TextBoxFor(model => model.AddressLine2, new {@type = \"text\", @id = \"address-2\", @placeholder = \"Address line 2\", @disabled = \"disabled\"})",
			"address3":		"@Html.TextBoxFor(model => model.AddressLine3, new {@type = \"text\", @id = \"address-3\", @placeholder = \"Address line 3\", @disabled = \"disabled\"})"

		},
		
		"finance":		"@Html.CheckBoxFor(model => model.RequestCallback, new { @id=\"finance\", @value=\"1\"})",
		"optout": {

			"phone":	"@Html.CheckBoxFor(model => model.RequestCallback, new { @id=\"optout-phone\", @value=\"1\"})",
			"post":		"@Html.CheckBoxFor(model => model.EmailResults, new { @id=\"optout-post\", @value=\"1\"})"

		}

	}

}

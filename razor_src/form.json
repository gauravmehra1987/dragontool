{

	"model":			"@model Combobulator.Business.ViewModels.FormViewModel\n@{ViewBag.Title = \"MINI Combobulator Form\"; }",

	"open":				"@using (Ajax.BeginForm(\"Submit\", \"Form\", new AjaxOptions { HttpMethod = \"POST\" }))\n{\n@Html.AntiForgeryToken()\n@Html.ValidationSummary(true)",
	"close":			"}",

	"carImage":		"@Url.Content(\"assets/cars/\" + @Model.Code + \".png\")",
	"field": {
		"user":		"@Html.HiddenFor(model => model.UserId, new {@id = \"uid\", @value = ViewBag.UserId})",

		"title":		"@Html.DropDownListFor(model => model.Title, new SelectList(Model.Titles, \"Name\", \"Name\"), \"Title\", new { Name = \"title\" })",
		"name":			"@Html.TextBoxFor(model => model.FirstName, new { @type = \"text\", @id = \"name\", Name = \"name\", @placeholder = \"First name\" })",
		"surname":		"@Html.TextBoxFor(model => model.LastName, new { @type = \"text\", @id = \"surname\", Name = \"surname\", @placeholder = \"Last name\" })",
		"email":		"@Html.TextBoxFor(model => model.Email, new { @type = \"email\", @id = \"email\", Name = \"email\", @placeholder = \"E-mail address\" })",
		"tel":			{

			"home":		"@Html.TextBoxFor(model => model.TelephoneHome, new { @type = \"tel\", @id = \"tel-home\", Name = \"tel-home\", @placeholder = \"Home telephone\" })",
			"work":		"@Html.TextBoxFor(model => model.TelephoneWork, new { @type = \"tel\", @id = \"tel-work\", Name = \"tel-work\", @placeholder = \"Work telephone\" })",
			"mobile":	"@Html.TextBoxFor(model => model.TelephoneMobile, new { @type = \"tel\", @id = \"tel-mobile\", Name = \"tel-mobile\", @placeholder = \"Mobile telephone\" })"

		},
		"address": {

			"home":			"@Html.TextBoxFor(model => model.AddressType, new { @type = \"radio\", @id = \"address-type-home\", @Name = \"address-type\", @value = \"home\", @checked = \"checked\" })",
			"work":			"@Html.TextBoxFor(model => model.AddressType, new { @type = \"radio\", @id = \"address-type-work\", @Name = \"address-type\", @value = \"home\" })",
			"postcode":		"@Html.TextBoxFor(model => model.AddressPostcode, new { type = \"text\", id = \"postcode\", Name = \"postcode\", placeholder = \"Postcode\" })",
			"address1":		"@Html.TextBoxFor(model => model.AddressLine1, new { @type = \"text\", @id = \"address-1\", @Name = \"address-1\", @placeholder = \"Address line 1\", @disabled = \"disabled\" })",
			"address2":		"@Html.TextBoxFor(model => model.AddressLine2, new { @type = \"text\", @id = \"address-2\", @Name = \"address-2\", @placeholder = \"Address line 2\", @disabled = \"disabled\" })",
			"address3":		"@Html.TextBoxFor(model => model.AddressLine3, new { @type = \"text\", @id = \"address-3\", @Name = \"address-3\", @placeholder = \"Address line 3\", @disabled = \"disabled\" })"

		},
		
		"finance":		"@Html.TextBoxFor(model => model.RequestCallback, new {@type=\"checkbox\", @id = \"finance\", @Name = \"finance\", @value = \"1\", @checked=\"checked\"})",
		"optout": {

			"phone":	"@Html.TextBoxFor(model => model.RequestCallback, new { @type = \"checkbox\", @id = \"optout-phone\", @Name = \"optout-phone\", @value = \"phone\" })",
			"post":		"@Html.TextBoxFor(model => model.EmailResults, new { @type = \"checkbox\", @id = \"optout-post\", @Name = \"optout-post\", @value = \"post\" })"

		}

	}

}

							h1(id="site-logo", style="position:static;padding-right:0;") MINI Combobulator

				#loadbay
					p Result will appear here

			#interface
				form(id="", method="", action="", autocomplete="off", novalidate)
					fieldset
						//-
							.field
								label(for="capacity-1") Capacity (Bums on seats)
								//- DEVNOTE: 0 reserved for no selection/off state(which is implied via the in interface but a valid response amongst the set)
								.control-group
									select(id="capacity-1", name="capacity-1")
										option(value="0") Off
										option(value="1") Man
										option(value="2") Woman
										option(value="3") Boy

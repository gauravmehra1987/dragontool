									label
										input(type="checkbox", name="options", value="5")
										span.button(role="button")
											span Teleportation

						.field
							label(for="economy") Economy
							.control
								select(id="economy", name="economy")
									option(value="0") OFF
									option(value="1") 25-45 mpg
									option(value="2") 46-60 mpg
									option(value="3") 61-69 mpg
									option(value="4") 70+ mpg

						.field.radio
							label(for="colour") Colour
							.control
								label
									input(type="radio", name="colour", value="1")
									span.button(role="button")
										span Cyan
								label
									input(type="radio", name="colour", value="2")

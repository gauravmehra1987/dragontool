@model Combobulator.Models.Customer

<script src="~/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>

<div id="formContainer">
@using (Ajax.BeginForm("ExistingCustomerSubmit", "Customer", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "formContainer" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <header>
        <h1 class="title">Almost there.</h1>
        <p>You've found your dream MINI. Now pop in your details so your MINI Dealer can help you get your hands on it.</p>
    </header>

    <fieldset>
        <legend class="sr-only">Existing customer form</legend>
        @Html.EditorFor(model => model.UserId, new { value = Model.UserId })
        
        <div class="form-control">
            <div class="select">
                @Html.DropDownListFor(model => model.Title, new SelectList(Model.Titles, "Name", "Name"),  "Title")
            </div>
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="form-control full-width">
            <div class="input-group">
                <span class="input-group-addon" id="">$</span>
                @Html.TextBoxFor(model => model.FirstName, new { placeholder = "First names"})
            </div>
            @Html.ValidationMessageFor(model =>  model.FirstName)
        </div>

        <div class="form-control full-width">
            <div class="input-group">
                <span class="input-group-addon" id="">$</span>
                @Html.TextBoxFor(model => model.LastName, new { placeholder = "Last name"})
            </div>
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <div class="form-control full-width">
           <div class="input-group">
               <span class="input-group-addon" id="">$</span>
                @Html.TextBoxFor(model => model.Email, new { placeholder = "Email address"})
            </div>
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="form-control full-width">
           <div class="input-group">
               <span class="input-group-addon" id="">$</span>
                @Html.TextBoxFor(model => model.TelephoneHome, new { placeholder = "Home telephone"})
            </div>
            @Html.ValidationMessageFor(model => model.TelephoneHome)
        </div>

        <div class="form-control checkbox">
            <input type="hidden" value="false" name="RequestCallback">
            <input id="RequestCallback" type="checkbox" value="true" name="RequestCallback">
            @Html.LabelFor(model => model.RequestCallback)
        </div>

        <div class="form-control checkbox">
            <input type="hidden" value="false" name="RequestEarlyRedemption">
            <input id="RequestEarlyRedemption" type="checkbox" value="true" name="RequestEarlyRedemption">
            @Html.LabelFor(model => model.RequestEarlyRedemption)
        </div>

        <div class="form-control checkbox">
            <input type="hidden" value="false" name="EmailResults">
            <input id="EmailResults" type="checkbox" value="true" name="EmailResults">
            @Html.LabelFor(model => model.EmailResults)
        </div>

        <div class="form-control full-width">
            <input type="submit" value="Submit" />
        </div>

    </fieldset>
}
</div>